.workspace-details-description
  color $disabled-color

.workspace-details-content
  padding 0 14px

  button
    margin 0 30px 0 0

  .workspace-status-indicator .fa-circle
    font-size 19px

  span.workspace-status-text
    color lighten($che-ide-background-color, 40%) !important
    margin-bottom 4px
    margin-left 10px

  .workspace-delete-label label
    color $che-delete-label-color

  .che-label-container-content
    .workspace-details-input
      margin -6px 0
    .workspace-details-action-buttons
      margin-top 20px

  .workspace-details-restart-message
    color $disabled-color
    margin-top 15px

.workspace-details-overlay
  position relative
  bottom 0
  left 0
  right 0
  z-index 100
  background-color lighten($mouse-gray-color, 10%)
  height 50px
  border-top 1px solid $very-light-grey-color
  border-bottom 1px solid $very-light-grey-color

  button
    margin 0 20px 0 0

  .workspace-details-save-message
    margin-right 20px
    color darken($dark-menacing-sky-color, 27%)

.workspace-details-toolbar-button
  &>div
    position relative

    .workspace-details-support
      width 0

    .workspace-details-message-container
      position absolute
      right 0
      top 0

  .workspace-details-save-message
    font-size 12px
    white-space nowrap
    color darken($dark-menacing-sky-color, 27%)
    margin-right 20px

  .che-button
    line-height 13px

    span
      font-size 13px !important
      line-height 13px
